html
  body
    form#new-tweet(action='/create' method='PUT')
      fieldset
        legend New Tweet
        div
          <br />
          label(for='user') Username: &nbsp;
          input(name='user', type='text', placeholder=' your username', required='', autofocus='')
        div
          <br />
          label(for='tweet') tweet: &nbsp;
          input(name='tweet', type='text', required='', autofocus='')
        div
          <br /> &nbsp;
          input(name='create', type='submit', value='Create')
    ul
      each tweet in tweets
        li
          form#update-tweet(action='/update/'+tweet.id method='PUT')
            label(for='user' style={color: tweet.color}) Username: &nbsp #{tweet.user} &nbsp
            input(name='user', type='text', placeholder=' update username', autofocus='')
            <br /><br />
            label(for='tweet' style={color: tweet.color}) tweet: #{tweet.tweet} &nbsp;
            input(name='tweet', type='text', placeholder=' update tweet', autofocus='')
            <br /><br />
            input(name='update', type='submit', value="Update")
          p(style={color: tweet.color})  id: #{tweet.id}
            form.delete-tweet(action='/delete/'+tweet.id method='DELETE')
              input(name='delete', type='submit', value="Delete Tweet")
          <br /><br />
      else
        li There are no tweets
